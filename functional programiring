using System;

namespace FunctionalPrograming
{
    class Program
    {
        static void Main(string[] args)
        {
            Person pesho = new Person() { Age = 15 };

            Console.WriteLine(pesho.GrowBuyYears(10));
        }
    }
}
class Person
{
    public int Age { get; set; }

    public int GrowBuyYears(int years)
    {
        return Age + years;
    }

}
